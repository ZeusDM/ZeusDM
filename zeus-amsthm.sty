\DeclareOption{classic}{\zeus@amsthmstylishfalse
						\zeus@amsthmclassictrue
						\zeus@amsthmobmfalse
						\zeus@amsthmobmtwofalse}

\DeclareOption{obm}{\zeus@amsthmstylishfalse
					\zeus@amsthmclassicfalse
					\zeus@amsthmobmtrue
					\zeus@amsthmobmtwofalse}

\DeclareOption{obmtwo}{\zeus@amsthmstylishfalse
						\zeus@amsthmclassicfalse
